[pytest]
# Minimum pytest version
minversion = 7.0

# Test discovery patterns
python_files = test_*.py *_test.py
python_classes = Test*
python_functions = test_*

# Test directories
testpaths = tests

# Add options
addopts =
    # Show extra test summary info
    -ra
    # Strict markers (fail on unknown markers)
    --strict-markers
    # Verbose output
    -v
    # Show local variables in tracebacks
    --showlocals
    # Stop after first failure (comment out for full run)
    # -x

# Timeout for each test (requires pytest-timeout)
# timeout = 30

# Markers
markers =
    slow: marks tests as slow (deselect with '-m "not slow"')
    integration: marks tests as integration tests
    unit: marks tests as unit tests

# Logging
log_cli = true
log_cli_level = INFO
log_cli_format = %(asctime)s [%(levelname)s] %(message)s
log_cli_date_format = %Y-%m-%d %H:%M:%S

# Asyncio mode (requires pytest-asyncio)
# asyncio_mode = auto

# Coverage (requires pytest-cov)
# To use: pytest --cov=your_package --cov-report=html

# Django settings (if using Django)
# DJANGO_SETTINGS_MODULE = your_project.settings

# Ignore directories
norecursedirs =
    .git
    .tox
    .eggs
    *.egg
    dist
    build
    __pycache__
    .venv
    venv
    node_modules

# Filter warnings
filterwarnings =
    ignore::DeprecationWarning
    ignore::PendingDeprecationWarning
